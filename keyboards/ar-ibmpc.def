	key ۷ num hexa tele
	key ۸ num hexa tele
	key ۹ num hexa tele
	}
	row {
	key + special tele
	key ۰ num hexa tele
	key = special
	}
}
uppercase {
	margin 0 0 0 0
	default_size 1
	row {
	key  َ special dead  size 2
	key  ً special dead
	key  ُ special dead
	key  ٌ special dead
	key ﻹ alpha
	key إ alpha
	key ‘ special
	key ÷ special
	key × special
	key ؛ special
	key < special
	key > special size 1
	}
	row {
	key \ special
	key @ special
	key ] special
	key [ special
	key ﻷ alpha
	key أ alpha
	key ـ special
	key ، special
	key / special
	key : special
	key " special
	key  ّ special dead
	}
	row {
	key ~ special size 2
	key  ْ special dead
	key  ِ special dead
	key  ٍ special dead
	key ﻵ alpha
	key آ alpha
	key ’ special
