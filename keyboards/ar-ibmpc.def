header {
name	"Arabic"
lang	"ar_AR"
wc	"ar_AR"

size	0	{ width 35 height 35 textpos 26 left 0 top 0 }
size	1	{ width 35 height 35 textpos 26 left 0 top 0 }
size	2	{ width 66 height 55 textpos 41 left 0 top 0 }
size	3	{ width 131 height 55 textpos 41 left 0 top 0 }
}

kbd_normal {
lowercase {
	margin 0 0 0 0
	default_size 1
	row {
	key ض alpha size 2
	key ص alpha
	key ث alpha
	key ق alpha
	key ف alpha
	key غ alpha
	key ع alpha
	key ه alpha
	key خ alpha
	key ح alpha
	key ج alpha
	key د alpha size 1
	}
	row {
	key ش alpha
	key س alpha
	key ي alpha
	key ب alpha
	key ل alpha
	key ا alpha
	key ت alpha
	key ن alpha
	key م alpha
	key ك alpha
	key ط alpha
	key ذ alpha
	}
	row {
	key ئ alpha size 2
	key ء alpha
	key ؤ alpha
	key ر alpha
	key ﻻ alpha
	key ى alpha
	key ة alpha
	key و alpha
	key ز alpha
	key ظ alpha
	key ، special
	key . special size 1
	}
}
lowercase_num {
	margin 0 0 0 9
	default_size 0
	row {
	key ۱ num hexa tele
	key ۲ num hexa tele
	key ۳ num hexa tele
	}
	row {
	key ۴ num hexa tele
	key ۵ num hexa tele
	key ۶ num hexa tele
	}
