## title: Persian (Iranian) keyboard layout
## author: Hessam Farhang <icehess@gmail.com>
##
#########################################
## Persian layout,
## based on
## Information Technology – Layout of Persian Letters and Symbols on Computer Keyboards
## ISIRI 9147 – 1st Edition
## Institute of Standards and Industrial Research of Iran
## http://www.isiri.org/UserStd/DownloadStd.aspx?id=9147
## http://behnam.esfahbod.info/standards/isiri-keyboard-9147.pdf
##

header {
name	"Persian"
lang	"fa_IR"
wc	"fa_IR"

size	0	{ width 35 height 35 textpos 26 left 0 top 0 }
size	1	{ width 35 height 35 textpos 26 left 0 top 0 }
size	2	{ width 66 height 55 textpos 41 left 0 top 0 }
size	3	{ width 131 height 55 textpos 41 left 0 top 0 }
}

kbd_normal {
lowercase {
	margin 0 0 0 0
	default_size 1
	row {
	key ض alpha size 2
	key ص alpha
	key ث alpha
	key ق alpha
	key ف alpha
	key غ alpha
	key ع alpha
	key ه alpha
	key خ alpha
	key ح alpha
	key ج alpha
	key چ alpha size 1
	}
	row {
	key ش alpha
	key س alpha
	key ی alpha
	key ب alpha
	key ل alpha
	key ا alpha
	key ت alpha
	key ن alpha
	key م alpha
	key ك alpha
	key گ alpha
	key \ special
	}
	row {
	key ظ alpha size 2
	key ط alpha
	key ز alpha
	key ر alpha
	key ذ alpha
	key د alpha
	key پ alpha
	key و alpha
	key . alpha
	key / special
	key ، special size 1
	}
}
lowercase_num {
	margin 0 0 0 9
	default_size 0
	row {
	key ۱ num hexa tele
	key ۲ num hexa tele
	key ۳ num hexa tele
	}
	row {
	key ۴ num hexa tele
	key ۵ num hexa tele
	key ۶ num hexa tele
	}
	row {
	key ۷ num hexa tele
	key ۸ num hexa tele
	key ۹ num hexa tele
	}
	row {
	key + special tele
	key ۰ num hexa tele
	key = special
	}
}
uppercase {
	margin 0 0 0 0
	default_size 1
	row {
	key ْ special dead size 2
	key ٌ special dead
	key ٍ special dead
	key ً special dead
	key ُ special dead
	key ِ special dead
	key َ special dead
	key ّ special dead
	key ] special
	key [ special
	key } special
	key { special size 1
	}
	row {
	key ؤ alpha
	key ئ alpha
	key ي alpha
	key إ alpha
	key أ alpha
	key آ alpha
	key ة alpha
	key » special
	key « special
	key : special
	key ؛ special
	key | special
	}
	row {
	key ك alpha size 2
	key ٓ special dead
	key ژ alpha
	key ٰ special dead
	key ‌ذ alpha
	key ٔ special dead
	key ء special dead
	key > special
	key < special
	key ؟ special
	key ! special size 1
	}
}
uppercase_num {
	margin 0 0 0 9
	default_size 0
	row {
	key ! special
	key ٬ special dead
	key ٫ special dead
	}
	row {
	key ﷼ special dead
	key ٪ special
	key × special
	}
	row {
	key ، special dead
	key * special
	key ) special
	}
	row {
	key ( special
	key - special
	key ـ special
	}
}
}

kbd_thumb {
lowercase {
	name "ا ب"
	margin 0 0 0 0
	default_size 2
	row {
	key ض alpha
	key ص alpha
	key ث alpha
	key ق alpha
	key ف alpha
	key غ alpha
	key ع alpha
	key ه alpha
	key خ alpha
	key ح alpha
	key ج alpha
	key چ alpha
	}
	row {
	key ش alpha
	key س alpha
	key ی alpha
	key ب alpha
	key ل alpha
	key ا alpha
	key ت alpha
	key ن alpha
	key م alpha
	key ك alpha
	key گ alpha
	key \ special
	}
	row {
	capslock
	key ظ alpha
	key ط alpha
	key ز alpha
	key ر alpha
	key ذ alpha
	key د alpha
	key پ alpha
	key و alpha
	key . alpha
	key / special
	backspace
	}
}
uppercase {
	name "ي ژ آ"
	margin 0 0 0 0
	default_size 2
	row {
	key ْ special dead
	key ٌ special dead
	key ٍ special dead
	key ً special dead
	key ُ special dead
	key ِ special dead
	key َ special dead
	key ّ special dead
	key ] special
	key [ special
	key } special
	key { special
	}
	row {
	key ؤ alpha
	key ئ alpha
	key ي alpha
	key إ alpha
	key أ alpha
	key آ alpha
	key ة alpha
	key » special
	key « special
	key : special
	key ؛ special
	key | special
	}
	row {
	capslock
	key ك alpha
	key ٓ special dead
	key ژ alpha
	key ٰ special dead
	key ‌ذ alpha
	key ٔ special dead
	key ء special dead
	key > special
	key < special
	key ؟ special
	backspace
	}
}
special {
	name "۱#+"
	margin 0 0 0 0
	default_size 2
	row {
	key ١ num tele
	key ٢ num tele
	key ٣ num tele
	key ٤ num tele
	key ٥ num tele
	key ٦ num tele
	key ٧ num tele
	key ٨ num tele
	key ٩ num tele
	key ٠ num tele
	key = special
	key ? special
	}
	row {
	key + special tele
	key - special num
	key _ special
	key # special tele
	key * special tele
	key % special
	key € special
	key £ special
	key $ special
	key ¥ special
	key ¢ special
	key ¤ special
	}
	row {
	capslock
	key , special
	key ، special
	key @ special
	key / special
	key \ special
	key ~ alpha special dead
	key ^ alpha special dead
	key ) special
	key ( special
	key ! special
	backspace
	}
}
special {
	name "*§¿"
	margin 0 0 0 0
	default_size 2
	row {
	key ´ alpha special dead
	key ` alpha special dead
	key ¨ alpha special dead
	key ^ alpha special dead
	key ~ alpha special dead
	key ' special
	key " special
	key „ special
	key “ special
	key ” special
	key ° special
	key & special
	}
	row {
	key ± special
	key § special
	key ½ special
	key ¹ special
	key ² special
	key ³ special
	key > special
	key < special
	key » special
	key « special
	key | special
	key ™ special
	}
	row {
	capslock
	key ; special
	key : special
	key ] special
	key [ special
	key } special
	key { special
	key ç alpha
	key ¡ special
	key ¿ special
	key © special
	backspace
	}
}
}
